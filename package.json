{
  "name": "vite-alpine-starter",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "preinstall": "node scripts/ensure-node-version.js",
    "clean": "rimraf dist dist-dev .vite",
    "dev": "node scripts/vite-runner.js dev",
    "preview": "node scripts/vite-runner.js preview",
    "build": "node scripts/vite-runner.js build && node scripts/generate-version.js",
    "release": "npm run build && node scripts/audit-commits.js",
    "smoke-test": "node scripts/smoke-test.js",
    "lint": "eslint src/**/*.js && stylelint src/**/*.css",
    "check": "npm run lint && npm run format",
    "format": "prettier --write 'src/**/*.{js,css,html}'"
  },
  "keywords": [],
  "author": "Ross A. Reyman",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-html": "^8.1.2",
    "globals": "^17.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^17.1.1",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-order": "^7.0.1",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^3.4.19",
    "rimraf": "^6.1.2",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "alpinejs": "^3.15.8",
    "aos": "^2.3.4"
  }
}